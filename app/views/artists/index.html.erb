<!DOCTYPE html>
<html>
<head></head>
<body>
<ul>
<% @artists.each do |artist| %>
    <li>
        <h3><%= link_to artist.name, artist_path(artist) %><h3>
        <p><%= artist.song_count %> songs</p>
        <ol>
            <% artist.songs.each do |song| %>
                <li>
                    <%= link_to song.title, songs_path(song) %> 
                </li>
            <% end %>
        </ol>
    </li>
<% end %>
</ul>
</body>
